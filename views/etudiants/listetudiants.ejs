<%- include('../header.ejs') %>
<!--begin::Main-->
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
  <!--begin::Content wrapper-->
  <div class="d-flex flex-column flex-column-fluid">
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
      <!--begin::Content container-->
      <div id="kt_app_content_container" class="app-container container-xxl">
        <!--begin::Table-->
        <div class="card card-flush mt-6 mt-xl-9">
          <!--begin::Card header-->
          <div class="card-header mt-5">
            <!--begin::Card title-->
            <div class="card-title flex-column">
              <h3 class="fw-bold mb-1">Liste des Etudiants</h3>
            </div>
            <!--begin::Card title-->
            <!--begin::Card toolbar-->
            <div class="card-toolbar my-1">
              <div class="me-4 my-1">
                <a href="/" class="btn btn-primary">Add</a>
              </div>

              <!--begin::Select-->
             
              <!--end::Select-->
              <!--begin::Select-->
            
              <!--end::Select-->
              <!--begin::Search-->
              <div class="d-flex align-items-center position-relative my-1">
                <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                <span class="svg-icon svg-icon-3 position-absolute ms-3">
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <rect
                      opacity="0.5"
                      x="17.0365"
                      y="15.1223"
                      width="8.15546"
                      height="2"
                      rx="1"
                      transform="rotate(45 17.0365 15.1223)"
                      fill="currentColor"
                    />
                    <path
                      d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z"
                      fill="currentColor"
                    />
                  </svg>
                </span>
                <!--end::Svg Icon-->
                <input
                  type="text"
                  id="kt_filter_search"
                  class="form-control form-control-solid form-select-sm w-150px ps-9"
                  placeholder="Recherche"
                />
              </div>
              <!--end::Search-->
            </div>
            <!--begin::Card toolbar-->
          </div>
          <!--end::Card header-->
          <!--begin::Card body-->
          <div class="card-body pt-0">
            <!--begin::Table container-->
            <div class="table-responsive">
              <!--begin::Table-->
              <table
                id="kt_user_overview_table"
                class="table table-row-bordered table-row-dashed gy-4 align-middle fw-bold"
              >
                <!--begin::Head-->
                <thead class="fs-7 text-gray-400 text-uppercase">
                  <tr>
                    <th class="max-w-100px">image</th>
                    <th class="max-w-100px">cin</th>
                    <th class="max-w-75px">nom</th>
                    <th class="max-w-75px">prenom</th> 
                    <th class="max-w-75px">email</th> 
                    <th class="max-w-75px">classe</th> 
                    <th class="max-w-75px">datebirth</th> 
                  </tr>
                </thead>
                <!--end::Head-->
                <!--begin::Body-->
                <tbody class="fs-6">
                  <% listetud.forEach(function(value) { %>
                  <tr>
                    <td class="max-w-75px">
                      <img src="<%= value.image %>" class="iimg" />
                    </td>
                    <td class="max-w-75px">
                      <%= typeof value.cin !== 'undefined' && value.cin %>
                    </td>
                    <td class="max-w-75px">
                        <%= typeof value.nom !== 'undefined' && value.nom %>
                      </td>
                     
                      <td class="max-w-75px">
                        <%= typeof value.prenom !== 'undefined' && value.prenom %>
                      </td>
                      <td class="max-w-75px">
                        <%= typeof value.email !== 'undefined' && value.email %>
                      </td>
                    <td class="max-w-75px">
                      <% if (value.classe ) { %>
                      <%= typeof value.classe.name !== 'undefined' && value.classe.name %>
                      <% } %>
                    </td>
                    <td class="max-w-75px">
                      
                      <%= moment(value.datebirth).format('DD MM YYYY');  %>
                    </td>
                    <td class="text-end">
                      <a
                      href="/edit/<%= value._id %>"
                        class="btn btn-light btn-sm"
                        >Modifier</a
                      >
                      <a
                        onclick='return confirm(`Voulez-vous  "Supprimer" ?`)'
                        href="/delete/<%= value._id %>"
                        class="btn btn-light btn-sm"
                        >Supprimer</a
                      >
                    </td>
                    
                    
                  </tr>
                  <% }) %>
                
                </tbody>
                <!--end::Body-->
              </table>
              <!--end::Table-->
            </div>
            <!--end::Table container-->
          </div>
          <!--end::Card body-->
        </div>
        <!--end::Card-->
      </div>
      <!--end::Content container-->
    </div>
    <!--end::Content-->
  </div>
  <!--end::Content wrapper-->
</div>
<!--end:::Main-->
